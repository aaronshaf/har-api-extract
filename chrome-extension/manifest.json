{
  "manifest_version": 3,
  "name": "Record API Requests",
  "version": "1.0.0",
  "description": "Record JSON/GraphQL API requests from current page for LLM analysis",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "debugger"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}